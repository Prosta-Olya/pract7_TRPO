                <TextBox Margin="5" Text="{Binding Diagnosis}"/>
                <Label>Рекомендации</Label>
                <TextBox Margin="5" Text="{Binding Recomendations}"/>
            </StackPanel>-->

        </Grid>
    </Grid>
</Window>
