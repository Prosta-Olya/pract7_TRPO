<Window x:Class="Pract7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract7"
        mc:Ignorable="d"
        Title="MainWindow" Height="945" Width="1695">
    <Grid Margin="0,0,5,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Label>Форма регистрации пользователя</Label>
                <Label>ID</Label>
                <TextBox Margin="5" Text="{Binding Id}"/>
                <Label>Имя</Label>
                <TextBox Margin="5" Text="{Binding Name}"/>
                <Label>Фамилия</Label>
                <TextBox Margin="5" Text="{Binding LastName}"/>
                <Label>Специализация</Label>
                <TextBox Margin="5" Text="{Binding Specialisation}"/>
                <Label>Пароль</Label>
                <TextBox Margin="5" Text="{Binding Password}"/>
                <Label>Подтверждение пароля</Label>
                <TextBox Margin="5" Text="{Binding Password}"/>
                <Button>Зарегистрироваться</Button>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <Label>Форма входа пользователя</Label>
                <Label>ID</Label>
                <TextBox Margin="5" Text="{Binding Id}"/>
                <Label>Пароль</Label>
                <TextBox Margin="5" Text="{Binding Password}"/>
                <Button>Войти</Button>
            </StackPanel>

            <StackPanel>
                <Label>Текущий пользователь</Label>
            </StackPanel>
            
